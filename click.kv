<Manager>:
    id: screen_manager

    mode_screen: mode_screen
    click_away: click_away

    Mode:
        id: mode_screen
        name: "mode_menu"
        manager: screen_manager

    ClickAway:
        id: click_away
        name: "clicker"
        manager: screen_manager

<Mode>:

    FloatLayout:

        EasyButton:
            id: easyButton
            size_hint: .4, .2
            pos_hint: {'center_x': .5, 'center_y': .8}
            on_release:
                root.change_screen(100)

        NormalButton:
            id: normalButton
            size_hint: .4, .2
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release:
                root.change_screen(50)

        HardButton:
            id: hardButton
            size_hint: .4, .2
            pos_hint: {'center_x': .5, 'center_y': .2}
            on_release:
                root.change_screen(25)

<ClickAway>:
    addButton: addButton

    BoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 200

        AddButton:
            id: addButton
            on_release: root.add_one()

<AddButton>:
    text: "0"
    font_size: 25

<EasyButton>:
    text: "EASY"
    font_size: 50

<NormalButton>:
    text: "NORMAL"
    font_size: 50

<HardButton>:
    text: "HARD"
    font_size: 50
